{
  "include": ["**/*"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "/*": ["./src/*"],
      "terraria-world-file": ["./terraria-world-file-ts/src/index.ts"],
      "terraria-world-file/browser": ["./terraria-world-file-ts/src/platform/browser.ts"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}